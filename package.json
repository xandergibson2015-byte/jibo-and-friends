{
  "name": "jibo-and-friends",
  "version": "1.0.0",
  "description": "Jibo and Friends",
  "main": "main.js",
  "author": "Xander",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.xander.jiboandfriends",
    "productName": "Jibo and Friends",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/.bin"
    ],

    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },

    "mac": {
      "target": ["dmg", "pkg"],
      "icon": "build/icon.icns",
      "minimumSystemVersion": "11.0",
      "category": "public.app-category.education"
    },

    "pkg": {
      "installLocation": "/Applications"
    },

    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Education"
    }
  }
}
