{
  "name": "jibo-and-friends",
  "version": "1.0.0",
  "description": "Fan-made Jibo and Friends app",
  "author": {
    "name": "Xander Gibson",
    "email": "xandergibson2015@gmail.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "^28.2.10",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.fanproject.jiboandfriends",
    "productName": "Jibo and Friends",
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.icns",
      "minimumSystemVersion": "11.0"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png"
    }
  }
}
