{
  "name": "jibo-and-friends",
  "version": "1.0.0",
  "description": "Fan-made Jibo and Friends app",
  "main": "main.js",
  "author": {
    "name": "Xander Gibson",
    "email": "xandergibson2015@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.fanproject.jiboandfriends",
    "productName": "Jibo and Friends",
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
